.chat-message
  margin 10px
  display inline-block
  padding 5px 7px
  max-width 70%
  text-align left
  word-wrap break-word
  line-height 18px
  background-color #f1f1f1
  box-shadow none
  border-radius 5px
  position relative

  .chat-message__date
    text-align right
    font-size 10px
    color #00838F
    line-height 10px
    padding 3px 0 0 0

  .chat-message__name
    color #43a047

  .chat-message__text
    font-size 13px

  .icon
    position absolute
    font-size 25px
    top 8px
    left 3px

  .chat-message__link
    margin 0 0 0 25px

.chat-message__is-mine
  margin-left auto
  text-align right

  .chat-message
    background-color #E3F2FD

.chat-message__image-container
  padding 2px 0

  img
    max-height 150px
    max-width 100%

.avatar
  margin 10px 0 0 10px

.chat-message--right
  justify-content flex-end !important

.chat-message__flex-container
  align-items flex-start

