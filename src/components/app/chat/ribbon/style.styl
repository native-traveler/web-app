.chat__container
  background #b3e5fc url("/static/images/bg.jpg") repeat 0 0

.layout, .chat__container, .chat__ribbon
  height 100% !important

.chat__input-container
  width 100%
  padding 3px 0 5px 0
  flex-direction row
  background-color #e0e0e0
  border-top 1px solid #bdbdbd

.chat__input-area
  width 100%
  display flex
  align-items center

  textarea
    -webkit-border-radius 5px 5px 5px
    -moz-border-radius 5px 5px 5px
    border-radius 5px 5px 5px
    background-color #fff
    width 100%
    padding 10px 5px
    resize none
    line-height 150%

.chat__ribbon
  width 100%
  max-width 900px
  margin 0 auto
  background-color #f5f5f5

.chat__input-row
  align-items center

.chat__messages-container
  background-color #fff
  overflow auto